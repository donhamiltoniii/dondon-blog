{
    "branches": [
        "main"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {
                        "type": "feat",
                        "release": "minor"
                    },
                    {
                        "type": "fix",
                        "release": "minor"
                    },
                    {
                        "type": "content",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "perf",
                        "release": "patch"
                    },
                    {
                        "type": "test",
                        "release": "patch"
                    },
                    {
                        "type": "build",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "release": "patch"
                    },
                    {
                        "type": "chore",
                        "release": "patch"
                    },
                    {
                        "type": "revert",
                        "release": "patch"
                    }
                ],
                "parserOpts": {
                    "noteKeywords": [
                        "BREAKING CHANGE",
                        "BREAKING CHANGES"
                    ]
                }
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "üöÄ Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "content",
                            "section": "üìù Content Updates"
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation"
                        },
                        {
                            "type": "style",
                            "section": "üíÑ Styling"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring"
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance Improvements"
                        },
                        {
                            "type": "test",
                            "section": "‚úÖ Tests"
                        },
                        {
                            "type": "build",
                            "section": "üõ†Ô∏è Build System"
                        },
                        {
                            "type": "ci",
                            "section": "üë∑ CI"
                        },
                        {
                            "type": "chore",
                            "section": "üîß Maintenance"
                        },
                        {
                            "type": "revert",
                            "section": "‚è™ Reverts"
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json",
                    "package-lock.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} üéâ",
                "labels": false,
                "releasedLabels": false
            }
        ]
    ]
}