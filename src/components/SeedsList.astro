---
import type { CollectionEntry } from "astro:content";
import { getTitleFromSlug } from "../lib/getTitleFromSlug";
import { kebabToTitle } from "../lib/kebabToTitle";

interface Props {
  seeds: CollectionEntry<"seeds">[];
}

const { seeds } = Astro.props;
---

<div class="blog-posts-by-date">
  {
    seeds.length > 0 ? (
      <ul>
        {seeds.map((seed) => (
          <li>
            <a href={`/seeds/${seed.slug}`}>
              {kebabToTitle(getTitleFromSlug(seed.slug))}
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p>
        <strong>There are no seeds... Something has gone wrong...</strong>
      </p>
    )
  }
</div>
