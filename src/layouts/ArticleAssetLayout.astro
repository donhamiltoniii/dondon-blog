---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { decodeHtml } from "../lib/decodeHtml";
import type { ArticleAssetData } from "../types";

type Props = ArticleAssetData;

const { title, description, pubDate, lastUpdate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
      img {
        aspect-ratio: 2;
        width: 100%;
      }
      .container {
        margin: 0 auto;
        max-width: 65ch;
        width: 90%;
      }
      .last-updated-on {
        font-style: italic;
      }
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <Header />
      <main>
        <article>
          <h1 class="title">{title}</h1>
          <FormattedDate date={pubDate} />
          {
            lastUpdate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={lastUpdate} />
              </div>
            )
          }
          <p>{decodeHtml(description)}</p>
          <hr />
          <slot />
        </article>
      </main>
      <Footer />
    </div>
  </body>
</html>
