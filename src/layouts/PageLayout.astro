---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../constants";

type Props = { description: string; heroImage?: string; title: string };

const { description, heroImage, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${SITE_TITLE} | ${title}`} description={description} />
    <style>
      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        padding: 0;
      }

      img {
        aspect-ratio: 2;
        width: 100%;
      }

      .container {
        display: grid;
        grid-template-rows: auto 1fr auto;
        margin: 0 auto;
        max-width: 65ch;
        min-height: 100vh;
        width: 90%;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <Header title={title} />
      <main>
        {
          heroImage && (
            <>
              <img width={720} height={360} src={heroImage} alt="" />
              <small>
                hero image photos are from{" "}
                <a href="https://picsum.photos">Picsum</a>
              </small>
            </>
          )
        }
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
