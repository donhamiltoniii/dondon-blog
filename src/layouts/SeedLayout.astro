---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { decodeHtml } from "../lib/decodeHtml";
import type { SeedAssetData } from "../types";

type Props = SeedAssetData;

const props = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={props.title} description={props.title} />
    <style>
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }

      img {
        aspect-ratio: 2;
        width: 100%;
      }
      main {
        height: auto;
      }

      .container {
        margin: 0 auto;
        max-width: 65ch;
        width: 90%;
      }

      .flex-container {
        display: flex;
        justify-content: space-between;
      }

      .last-updated-on {
        font-style: italic;
      }

      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <Header />
      <main>
        <article>
          <h1 class="title">{props.title}</h1>
          <div class="flex-container">
            <FormattedDate date={props.pubDate} />
            {
              props.lastUpdate && (
                <time class="last-updated-on">
                  Last updated on <FormattedDate date={props.lastUpdate} />
                </time>
              )
            }
          </div>
          <hr />
          <slot />
        </article>
      </main>
      <Footer />
    </div>
  </body>
</html>
